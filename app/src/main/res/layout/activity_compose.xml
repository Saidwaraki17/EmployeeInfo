<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background1"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="From "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center|left"
            android:paddingLeft="10dp" />
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:text=":"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center|left"
            android:paddingLeft="10dp" />
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:id="@+id/spinner_emails"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:text="revue@revuesoft.com"
            android:hint="enter your email id"
            android:gravity="center|left"
            android:paddingLeft="10dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:visibility="gone"

            android:layout_margin="4dp"
            android:orientation="horizontal">
            <com.example.employeeinfo.Others.MyTextViewFontStyle
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="match_parent"
                android:text="Attach"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center|left"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/ic_attachment_black_24dp"
                android:textSize="20sp" android:textStyle="bold"
                android:textColor="#000" android:layout_gravity="left"
                android:gravity="center|left" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="To"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center|left"
            android:paddingLeft="10dp" />
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:text=":"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center|left"
            android:paddingLeft="10dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/testback"
            android:orientation="horizontal">
            <EditText
                    android:imeOptions="flagNoExtractUi" android:id="@+id/editText_to"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:textColor="#000" android:textSize="16sp"
                android:inputType="textEmailAddress" android:background="#fff" android:layout_margin="4dp" android:hint="enter email id" android:gravity="center|left" android:paddingLeft="10dp" />
            <ImageView
                android:id="@+id/i1" android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:padding="6dp"
                android:src="@drawable/ic_clear_black_24dp"
                android:gravity="center|left"
                android:paddingLeft="10dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Cc "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center|left"
            android:paddingLeft="10dp" />
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:text=":"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center|left"
            android:paddingLeft="10dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/testback"
            android:orientation="horizontal">
            <EditText
                    android:imeOptions="flagNoExtractUi"
                android:id="@+id/editText_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:textColor="#000"
                android:textSize="16sp"
                android:background="#fff"
                android:layout_margin="4dp"
                android:hint="enter email id"
                android:gravity="center|left"
                android:paddingLeft="10dp" />
            <ImageView
                android:id="@+id/i2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:padding="6dp"
                android:src="@drawable/ic_clear_black_24dp"
                android:gravity="center|left" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Subject"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center|left"
            android:paddingLeft="10dp" />
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:text=":"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/testback"
            android:orientation="horizontal">
            <EditText
                    android:imeOptions="flagNoExtractUi"
                android:id="@+id/editText_subject"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:textColor="#000"
                android:textSize="16sp"
                android:background="#fff"
                android:layout_margin="4dp"
                android:hint="type subject here..."
                android:gravity="center|left"
                android:paddingLeft="10dp" />
            <ImageView
                android:id="@+id/i3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:padding="6dp"
                android:src="@drawable/ic_clear_black_24dp"
                android:gravity="center|left"
                android:paddingLeft="10dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:id="@+id/attah"
            android:orientation="horizontal">
            <com.example.employeeinfo.Others.MyTextViewFontStyle
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:text="Attach"
                android:layout_marginLeft="10dp"
               android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_attachment_black_24dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:gravity="center|left"
                android:textStyle="bold" />
        </LinearLayout>
        <com.example.employeeinfo.Others.MyTextViewFontStyle
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.05"
                android:text=":"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center|left"
                android:paddingLeft="8dp"
                />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"

            android:layout_marginRight="5dp"

            android:background="@drawable/testback"
            android:orientation="horizontal">
            <com.example.employeeinfo.Others.MyTextViewFontStyle
                android:id="@+id/filename"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:textColor="#000"
                android:textSize="18sp"
                android:background="#fff"
                android:layout_margin="4dp"
                android:gravity="center|left"
                android:paddingLeft="10dp" />
            <ImageView
                android:id="@+id/i4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:padding="5dp"
                android:src="@drawable/ic_clear_black_24dp"
                android:gravity="center|left"
                android:paddingLeft="10dp" />
        </LinearLayout>
    </LinearLayout>
    <EditText
                    android:imeOptions="flagNoExtractUi"
        android:id="@+id/editText_composemail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="vertical"
        android:scrollbarSize="2dp"
        android:scrollbarStyle="insideInset"
        android:hint="Compose your message...."
        android:padding="15dp" android:gravity="left"
        android:background="@drawable/plain_back" />
    <Button android:id="@+id/send_btn"
       android:textStyle="bold"
            android:textColor="#fff"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Send"
        android:background="@drawable/buttonbackground"
         android:layout_marginTop="15dp"
        android:textSize="20sp" />
</LinearLayout>
</LinearLayout>