<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:background="@drawable/background1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Industry Courses"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/tableback2"></com.example.employeeinfo.Others.MyTextViewFontStyle>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                >
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback"
                    android:text="S.No"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback"
                    android:text="Course Name"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback"
                    android:text="Year of Passing"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback"
                    android:text="Certificate"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback1"
                    android:text="01"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback1"
                    android:text=" NISM  Training"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback1"
                    android:text="2018"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback1"
                    android:text="View"
                    android:textStyle="bold"
                    android:id="@+id/v1"
                    android:textSize="18sp"
                    android:textColor="#00f"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback1"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback1"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback1"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback1"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback1"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback1"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback1"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>
                <com.example.employeeinfo.Others.MyTextViewFontStyle
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="match_parent"
                    android:background="@drawable/tableback1"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:gravity="center">

                </com.example.employeeinfo.Others.MyTextViewFontStyle>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>