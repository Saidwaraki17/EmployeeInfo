<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.25"
            android:text=" Name"
            android:gravity="center"
            android:background="@drawable/tableback1"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/emp_name"
            android:layout_margin="0.5dp"/>
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/tableback1"
            android:textColor="#00f"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:id="@+id/empid"
            android:layout_margin="0.5dp"/>
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/tableback1"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18dp"

            android:id="@+id/emp_work"/>
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:id="@+id/emp_pres"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/tableback1"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:id="@+id/emp_obs"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="50dp"
            android:text="absent"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:background="@drawable/tableback1"
            android:layout_margin="0.5dp"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <com.example.employeeinfo.Others.MyTextViewFontStyle
            android:id="@+id/emp_leave"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.15"
            android:text="leaves"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_margin="0.5dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/tableback1"/>
        <!--<TextView-->
        <!--android:id="@+id/emp_remarks"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:text="Remarks"-->
        <!--android:gravity="center"-->
        <!--android:textColor="@android:color/black"-->
        <!--android:textStyle="bold"-->
        <!--android:textSize="18dp"/>-->
    </LinearLayout>
</LinearLayout>